<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecodeImageActivity">

    <CheckBox
        android:id="@+id/defaultImageCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/defaultImageCheckbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/processReceipt"/>

    <Button
        android:id="@+id/processReceipt"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp"
        android:text="Process Receipt"
        android:textSize="20sp"/>

</RelativeLayout>